<%= form_with(model: position) do |form| %>
<% if position.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(position.errors.count, "error") %> prohibited this position from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% position.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :book, class: label_class %>
          <%= form.text_field :book, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :floor, class: label_class %>
          <%= form.text_field :floor, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bookshelves, class: label_class %>
          <%= form.text_field :bookshelves, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :row, class: label_class %>
          <%= form.number_field :row, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if position.persisted? %>
<%= link_to "Cancel", position, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", positions_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
